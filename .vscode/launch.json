    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\pages\\complicated_page.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
    {
            "name": "Run Playwright with Repeat",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "args": ["playwright", "test", "--repeat-each=3"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}